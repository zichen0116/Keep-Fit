<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.equipmentwork.dao.CheckoutMapper">
    <resultMap id="checkoutMap" type="com.equipmentwork.entity.Checkout"> <!--resultMap 是Mybatis的标签，用于定义查询结果的映射关系(ORM映射)-->
        <id property="id" column="id"/> <!--id 是Mybatis的标签，用于定义主键字段,property表示类的属性，column表示映射的表的列名-->
        <result property="equipmentId" column="equipment_id"/>
        <result property="memberId" column="member_id"/>
        <result property="checkoutTime" column="checkout_time"/>
        <result property="returnTime" column="return_time"/>

    </resultMap>
    <insert id="insert" parameterType="com.equipmentwork.entity.Checkout">
        INSERT INTO checkout (
        equipment_id,
        member_id,
        checkout_time,
        return_time
        ) VALUES (
        #{equipmentId},
        #{memberId},
        #{checkoutTime},
        #{returnTime}
        )
    </insert>

    <!-- 根据ID删除 checkout 记录 -->
    <delete id="delete" parameterType="int">
        DELETE FROM checkout WHERE id = #{id}
    </delete>

    <!-- 查询所有 checkout 记录 -->
    <select id="findAll" resultMap="checkoutMap">
        SELECT * FROM checkout
    </select>

    <!-- 分页查询 checkout 记录 -->
    <select id="findByPage" resultMap="checkoutMap">
        SELECT * FROM checkout LIMIT #{start}, #{size}
    </select>
</mapper>